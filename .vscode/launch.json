    "version": "0.2.0",
    "configurations": [
        {
            "name": "Web server",
            "type": "node-terminal",
            "command": "python3 -m http.server -d dist",
            "request": "launch",            
        },
        {
            "name": "Build",
            "type": "debugpy",
            "request": "launch",
            "program": "build.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}